<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyVignette">

    <Spinner
        android:id="@+id/spinnerVignetteType"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:dropDownWidth="match_parent"
        android:entries="@array/vignette_types_array"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/button_buy_text"
        app:layout_constraintEnd_toEndOf="@+id/spinnerVignetteType"
        app:layout_constraintTop_toBottomOf="@+id/idTVBuyInfo" />

    <TextView
        android:id="@+id/idTVBuyInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/details_placeholder"
        android:textColor="@color/green"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/spinnerVignetteType"
        app:layout_constraintTop_toBottomOf="@+id/spinnerVignetteType" />
</androidx.constraintlayout.widget.ConstraintLayout>